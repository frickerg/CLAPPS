<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".HomeFragment">

	<!-- <fragment xmlns:tools="http://schemas.android.com/tools"
		 android:id="@+id/scanner_fragment"
		 android:name="com.mbientlab.bletoolbox.scanner.BleScannerFragment"
		 tools:layout="@layout/blescan_device_list"
		 android:layout_width="match_parent"
		 android:layout_height="match_parent" >-->

	<!--</fragment>-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="50dp"
		android:orientation="vertical" android:gravity="center">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="200dp">
			<Button
				android:id="@+id/btn_connectSensor"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:background="#32b66b"
				android:fontFamily="@font/roboto_bold"
				android:text="@string/sensor_connect"
				android:textAlignment="center"
				android:textColor="@color/textColor"
				android:textSize="20sp"
				android:visibility="visible" style="@style/Widget.AppCompat.Button.Borderless"/>
			<ImageButton
				android:id="@+id/img_posture"
				android:layout_width="match_parent"
				android:layout_height="195dp"
				android:scaleType="fitCenter"
				app:srcCompat="@drawable/haltung_gut"/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"
			android:layout_marginTop="2dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:src="@drawable/training1"
				android:layout_width="187dp"
				android:layout_height="match_parent" android:id="@+id/img_training1"
				android:scaleType="fitCenter"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_height="81dp" android:id="@+id/textView2" android:layout_weight="1"
				android:textAppearance="@android:style/TextAppearance.Material.Medium"
				tools:text="@string/tip_tip2"
				android:text="@string/tip_tip2"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"
			android:layout_marginTop="2dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ImageView
				android:src="@drawable/training2"
				android:layout_width="187dp"
				android:layout_height="82dp" android:id="@+id/imageView2"
				android:scaleType="fitCenter"/>
			<TextView
				android:text="@string/tip_tip1"
				android:layout_marginTop="5dp"
				android:layout_width="wrap_content"
				android:layout_height="73dp" android:id="@+id/textView" android:layout_weight="1"
				android:textAppearance="@android:style/TextAppearance.Material.Medium" tools:text="@string/tip_tip1"/>
		</LinearLayout>


	</LinearLayout>

</RelativeLayout>
