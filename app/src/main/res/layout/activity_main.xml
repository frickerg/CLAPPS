<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context=".MainActivity">

	<FrameLayout
		android:id="@+id/contentFrame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="@dimen/navbar_height">

	</FrameLayout>

	<LinearLayout
		android:id="@+id/navbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/navbar_height"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_gravity="bottom"
		android:baselineAligned="false"
		android:gravity="end"
		android:orientation="horizontal"
		android:paddingTop="18dp">

		<LinearLayout
			android:id="@+id/btn_home"
			android:layout_width="91dp"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/btn_home_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:contentDescription="@string/btn_home"
				app:srcCompat="@drawable/ic_home_green_24dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/roboto_light"
				android:text="@string/btn_home"
				android:textAlignment="center"
				android:textColor="@color/textColor" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_diary"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/btn_diary_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:contentDescription="@string/btn_diary"
				app:srcCompat="@drawable/ic_import_contacts_black_24dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:fontFamily="@font/roboto_light"
				android:text="@string/btn_diary"
				android:textAlignment="center"
				android:textColor="@color/textColor" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_tips"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/btn_tips_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:contentDescription="@string/btn_tips"
				app:srcCompat="@drawable/ic_content_paste_black_24dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/roboto_light"
				android:text="@string/btn_tips"
				android:textAlignment="center"
				android:textColor="@color/textColor" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_sensor"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<ImageButton
				android:id="@+id/btn_sensor_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:contentDescription="@string/title_sensor"
				app:srcCompat="@drawable/ic_bluetooth_black_24dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/roboto_light"
				android:text="@string/btn_sensor"
				android:textAlignment="center"
				android:textColor="@color/textColor" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
